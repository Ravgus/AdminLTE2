{% extends 'admin/lte.html.twig' %}

{% block title %}
    {{ product.title }}
{% endblock %}

{% block content_body %}
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">{{ product.title }}</h3>
            </div>
            <div class="box-body">
                <b>Description</b>: {{ product.description|raw }}<br>
                <b>Category</b>: {{ product.category.title }}<br>
                <b>Price</b>: {{ product.price }}<br>
                <b>Count</b>: {{ product.count }}<br>
                <b>Image</b>:<br>
                {% if product.image is not empty %}
                    <img src="{{ asset(product.image) | imagine_filter('big') }}" alt="{{ product.title }}">
                {% else %}
                    -
                {% endif %}
                <br>
            </div>
        </div>
        <!-- /.box -->

    </section>
{% endblock %}