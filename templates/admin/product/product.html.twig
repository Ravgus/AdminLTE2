{% extends 'admin/lte.html.twig' %}

{% block title %}
    {{ product.title }}
{% endblock %}

{% block content_header %}
{% endblock %}

{% block content_body %}
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">{{ product.title }}</h3>
            </div>
            <div class="box-body">
                <b>Description</b>: {{ product.description }}<br>
                <b>Price</b>: {{ product.price }}<br>
                <b>Count</b>: {{ product.count }}<br>
            </div>
        </div>
        <!-- /.box -->

    </section>
{% endblock %}